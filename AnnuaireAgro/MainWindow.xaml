<Window x:Class="AnnuaireAgro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       
        Title="AnnuaureAgro" Height="600" Width="800">


    <Grid Background="#FF040423" Margin="0,0,10,0">

       
            <Menu HorizontalAlignment="Center" Grid.Row="0" Grid.Column="0" Background="#FF184E57" VerticalAlignment="Top" >

                <MenuItem Foreground="White" FontSize="14px"  Padding="20" Margin="20 0 0 0"  Header="Collaborateur" Click="Collaborateur_Click" />
                <MenuItem Foreground="White" FontSize="14px"  Padding="20" Margin="60 0 20 0"  Header="Sites" Click="Sites_Click" />
                <MenuItem Foreground="White" FontSize="14px"  Padding="20" Margin="60 0 20 0"  Header="Services" Click="Services_Click" />
            </Menu>
     
        
        <Frame Grid.Row="1" x:Name="Main" Margin="0, 35, 0, 0"/>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="68*"/>
            <RowDefinition Height="405*"/>
        </Grid.RowDefinitions>

        
       

    </Grid>
</Window>


